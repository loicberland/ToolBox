{
    "compilerOptions": {
        "target": "es6", // Cible de compilation
        "module": "commonjs", // Module système
        "jsx": "react", // Support pour JSX
        "strict": true, // Active toutes les vérifications de type strictes
        "esModuleInterop": true, // Facilite l'importation des modules CommonJS
        "skipLibCheck": true, // Ignore les vérifications de type pour les fichiers de définition
        "forceConsistentCasingInFileNames": true // Force une casse cohérente dans les noms de fichiers
    },
    "include": [
        "src/**/*"
    ], // Inclure tous les fichiers dans le dossier src
    "exclude": [
        "node_modules",
        "dist"
    ] // Exclure les fichiers de node_modules et dist
}